/* 顶部个人信息 */
.top-header{
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 20rpx;
  background-color: #ffffff;
}

.img-header{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow:hidden;  
  display: block;  
}

.text-name{
  color: black;
  font-size: medium;
  margin-left: 20rpx;
}

/* 订单相关 */
.order-group{
  background-color: white;
  margin-top: 40rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}

.order-head{
  display: flex;
  flex-direction: row;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  align-items: center;
}
.order-head-left{
 font-size: large;
 font-style: bold;
}

.order-head-right{
  margin-left: auto;
}

.order-item-list{
 display: flex;
 flex-direction: row;
 justify-content: space-around;
}

.order-item{
  display: flex;
  flex-direction: column;
}

.order-item image{
  width: 100rpx;
  height:100rpx;
}


/* 功能列表 */
.card{
  background-color: white;
  border-radius:10rpx ;
  margin-left: 20rpx  ;
  margin-right: 20rpx;
  margin-top: 40rpx;
}

.line{
  height: 1rpx;
  background-color: #f8f8f8;
}

.card-item{
  padding-left: 20rpx;
  padding-right: 20rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
} 

.card-item:active{
  background-color:lightgray;
}

.card-item text{
  margin-right: auto;
}