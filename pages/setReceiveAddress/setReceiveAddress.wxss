
/* 选择提货门店 */
.setReceiveInfo{
  width: 710rpx;
  padding-top: 40rpx;
  margin-top: 20rpx;
  background-color: white;
  margin-left: auto;
  margin-right: auto;
}

.line{
  height: 2rpx;
  margin-left: 40rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: lightgray;
}

.setReceiveShopBtn{
  width: 500rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  margin-left: auto;
  margin-right: auto;
  border:lightgray;
  border-width: 6rpx;
  border-style: dotted;
  text-align: center;
}

.myInfoItem{
  display: flex;
  flex-direction: row;
  padding-left: 40rpx;
  height:80rpx;
}


.myInfoItem .leftDesc{
  width: 100rpx;
}

.myInfoItem .rightDetailInfo{
  border-style: solid;
  border-width: 1rpx;
  border-color: lightgray;
  margin-left: 40rpx;
  flex: 1;
}

/* 已设置门店提货组件的样式 */
.list-bd{
  width:100%;
  display: flex;
  flex-direction: column;
  padding-bottom: 100rpx;
  margin-top: 20rpx;
}

.list-item{
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-bottom: 60rpx;
  align-items: center;
  background-color: white;
}
.img{
   width:200rpx;
   height:200rpx;
}

.desc{
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.list-content{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-left: 20rpx;
}



/* 底部 */
.cart{
  height: 10vh;
  position: fixed;
  left: 0;
  right: 0; 
  bottom: 0;
  background: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.cart .cart-btn{
  margin-right: 0;
  width: 100%;
  height: 100%;
  font-size: 35rpx;
  text-align: center;
  line-height: 10vh;
  color: white;
  background-color: #23a3ff;
}